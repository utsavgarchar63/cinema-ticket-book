<%-include('header')%>
     <%if(locals.user){%>
          <div class="w-100 d-flex ">
               <div>
                    <img class="rounded-circle p-4" width="250px"
                         src="<%if(locals.user.avatar == ''){%>/img/avatars/undraw_profile_2.svg<%}else{%><%=locals.user.avatar%><%}%>"
                         alt="...">
               </div>
               <div class="p-5" style="width: 45%;">
                    <div class="mb-5">
                        <h3>Profile</h3>
                    </div>
                    <div class="d-flex justify-content-between">
                        <h6 class="text-primary">Name</h6>
                        <h6>
                            <%=locals.user.name%>
                        </h6>
                    </div>
                    <div class="py-3 d-flex justify-content-between">
                        <h6 class="text-primary">Email</h6>
                        <h6>
                            <%=locals.user.email%>
                        </h6>
                    </div>
                    <div class="d-flex justify-content-between">
                        <h6 class="text-primary">Age</h6>
                        <h6>
                            <%if(locals.user){%>
                                <%=locals.user.age%>
                                    <%}%>
                        </h6>
                    </div>
                    <div class="py-3 d-flex justify-content-between">
                        <h6 class="text-primary">Gender</h6>
                        <h6>
                            <%=locals.user.gender%>
                        </h6>
                    </div>
                    <div class="d-flex justify-content-between">
                        <h6 class="text-primary">City</h6>
                        <h6>
                            <%=locals.user.city%>
                        </h6>
                    </div>
                    <br>
                    <br>
                    <a href="/updateProfile/<%=locals.user.id%>"
                        class="d-none d-sm-inline-block btn btn-sm btn-primary shadow-sm p-2"><i
                            class="fas fa-pen fa-sm text-white-50"></i> Update Profile</a>
                </div>
          </div>
          <%}%>
               <%-include('footer')%>