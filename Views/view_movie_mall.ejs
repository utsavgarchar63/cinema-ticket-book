<%-include('header')%>

          <!-- Content wrapper -->
          <div class="content-wrapper">
            <!-- Content -->

            <div class="container-xxl flex-grow-1 container-p-y">
              <!-- Basic Bootstrap Table -->
              <div class="card">
                <h5 class="card-header">View Movie & Mall List</h5>
                  <% if(flash.success && flash.success.length> 0 ) { %>
                    <div class="alert alert-success">
                         <%= flash.success %>
                    </div>
                    <% } %>
                  <table class="table">
                    <thead>
                      <tr>
                        <th>Movie Name</th>
                        <th>Mall</th>
                        <th>Action</th>
                      </tr>
                    </thead>
                    <tbody class="table-border-bottom-0">
                      <%for(var i of movieMall){%>
                      <tr>
                        
                        <td><%=i.movieId.title%></td>
                        <td> <% for(var o = 0; o < i.mallId.length ; o++) { %>
                            <%= i.mallId[o].mall %><br>
                        <% } %>%></td>
                       
                        <td>
                          <a href="/movie_mall/delete_moviemall/<%=i.id%>" class="btn btn-danger">Delete</a>
                          <a href="/movie_mall/update_moviemall/<%=i.id%>" class="btn btn-primary">Update</a>
                        </td>
                      </tr>
                      <%}%>
                    </tbody>
                  </table>
              </div>
              <br>
              <br>
<%-include('footer')%>